{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "es2022"
    ],
    "sourceMap": true,
    "ignoreDeprecations": "5.0",
    "noImplicitAny": true,
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
